{
    "manifest_version": 3,
    "name": "CodeFlow AI Pro",
    "version": "2.0.0",
    "description": "AI-powered coding assistant with real-time context monitoring",
    
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    
    "host_permissions": [
        "<all_urls>"
    ],
    
    "background": {
        "service_worker": "background/service-worker.js"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content/dom-parser.js",
                "content/input-tracker.js",
                "content/scroll-tracker.js",
                "content/context-monitor.js",
                "content/sidebar-ui.js",
                "content/content-script.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    
    "action": {
        "default_title": "CodeFlow AI Pro"
    }
}
