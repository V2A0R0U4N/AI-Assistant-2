{
    "manifest_version": 3,
    "name": "CodeFlow AI Pro",
    "version": "2.0.0",
    "description": "AI-powered coding assistant with real-time context monitoring",
    
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    
    "host_permissions": [
        "<all_urls>"
    ],
    
    "background": {
        "service_worker": "background/service-worker.js"
    },
    
    "content_scripts": [
        {
            "matches": [
                "*://*.leetcode.com/*",
                "*://*.hackerrank.com/*",
                "*://*.codechef.com/*",
                "*://*.codeforces.com/*",
                "*://*.geeksforgeeks.org/*",
                "*://*.github.com/*",
                "*://*.replit.com/*",
                "*://*.codesandbox.io/*",
                "*://*.glitch.com/*",
                "*://localhost/*",
                "*://127.0.0.1/*"
            ],
            "js": [
                "content/context-monitor.js",
                "content/sidebar-ui.js",
                "content/content-script.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    
    "action": {
        "default_title": "CodeFlow AI Pro"
    }
}
